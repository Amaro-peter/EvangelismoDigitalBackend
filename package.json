{
  "name": "evangelismo-digital-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsup src/server.ts src/worker.ts --format cjs --clean",
    "start:dev": "npm run dev",
    "start:prod": "node dist/server.js",
    "start:worker": "tsx watch --env-file=.env src/worker.ts",
    "start:worker:prod": "node dist/worker.js",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test:unit:use-cases": "vitest run --project unit-use-cases src/use-cases",
    "test:unit:churches": "vitest run --project unit-churches src/use-cases/churches",
    "test:unit:users": "vitest run --project unit-users src/use-cases/users",
    "test:unit:messaging": "vitest run --project unit-messaging src/use-cases/messaging",
    "test:unit:forms": "vitest run --project unit-forms src/use-cases/forms",
    "test:unit:geo-provider": "vitest run --project unit-geo-provider src/providers/geo-provider",
    "test:unit:resilient-cache": "vitest run --project unit-resilient-cache src/lib/redis/helper",
    "test:e2e": "vitest run --project e2e",
    "test:watch": "vitest --project unit",
    "test:e2e:watch": "vitest --project e2e",
    "test:e2e:users": "vitest run --project e2e src/http/controllers/users",
    "test:geo-fallback": "vitest run --project e2e-geo-fallback",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prisma:seed": "tsx prisma/seed.ts"
  },
  "prisma": {
    "seed": "npm run prisma:seed"
  },
  "dependencies": {
    "@fastify/cors": "11.1.0",
    "@fastify/jwt": "10.0.0",
    "@fastify/rate-limit": "10.3.0",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "@sentry/node": "10.5.0",
    "@sentry/profiling-node": "10.5.0",
    "axios": "1.13.2",
    "bcryptjs": "3.0.2",
    "bullmq": "5.66.0",
    "cpf-cnpj-validator": "1.0.3",
    "fastify": "5.5.0",
    "ioredis": "5.8.2",
    "nodemailer": "7.0.5",
    "pg": "8.16.3",
    "pino": "9.9.0",
    "uuid": "11.1.0",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@types/node": "24.3.0",
    "@types/nodemailer": "7.0.0",
    "@types/pg": "8.16.0",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "pino-pretty": "13.1.1",
    "prettier": "3.6.2",
    "prisma": "7.2.0",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "tsup": "8.5.0",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0",
    "vite": "7.3.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.53.3"
  }
}
