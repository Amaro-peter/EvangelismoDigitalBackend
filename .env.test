# .env.test

# Ambiente
NODE_ENV=test
LOG_LEVEL=error

# App
APP_NAME="Projeto Evangelismo Digital Test"
APP_PORT=3333
# Token de exemplo com mais de 60 caracteres para passar na validação do Zod
JWT_SECRET="teste-env-secret-teste-env-secret-teste-env-secret-teste-env-secret-123456"
FRONTEND_URL="http://localhost:5173"
HASH_SALT_ROUNDS=12 
# Salt rounds menor para os testes rodarem mais rápido (hashing demora menos)

# Database
# Note: Para testes unitários com repositório In-Memory, a URL não precisa ser real,
# mas precisa ser uma URL válida para passar no z.url()
DATABASE_URL="postgresql://test:test@localhost:5432/testdb"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=test

# SMTP
SMTP_EMAIL="test@example.com"
SMTP_PASSWORD="test"
SMTP_PORT=587
SMTP_HOST="smtp.example.com"
SMTP_SECURE=false

# ADMIN
ADMIN_EMAIL="admin@example.com"